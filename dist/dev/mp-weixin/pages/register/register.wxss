body {
  height: 100%;
  margin: 0;
  padding: 0;
}
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.page .up-section {
  background-image: linear-gradient(to right, rgb(120, 195, 255), rgb(54, 94, 254));
}
.page .up-section .logo-section {
  position: absolute;
  left: 27%;
  top: 9%;
  z-index: 2;
}
.page .up-section .up-section-text {
  display: flex;
  flex-direction: column;
  margin-left: 4%;
  margin-bottom: 35px;
  color: white;
}
.page .up-section .up-section-text .up-section-text-big {
  font-size: 20px;
  margin-top: 18%;
}
.page .up-section .up-section-text .up-section-text-big .big-p {
  margin-top: 8px;
}
.page .up-section .up-section-text .up-section-text-small {
  font-size: 12px;
  margin-top: 10px;
  color: rgba(255, 255, 255, 0.85);
}
.page .down-section {
  z-index: 10;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  background-color: #E5EDF8;
  border-top-right-radius: 20px;
  border-top-left-radius: 20px;
  margin-top: -20px;
}
.page .down-section .input-section {
  margin-top: 30px;
  margin-left: 6%;
}
.page .down-section .input-section .phone-num {
  margin-bottom: 20px;
}
.page .down-section .input-section .uni-input1,
.page .down-section .input-section .uni-input2,
.page .down-section .input-section .uni-input4,
.page .down-section .input-section .uni-input5 {
  display: flex;
  align-items: center;
  margin-top: 15px;
  background-color: rgb(205, 222, 252);
  width: 92%;
  height: 50px;
  border-radius: 15px;
}
.page .down-section .input-section .uni-input3 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 15px;
  background-color: rgb(205, 222, 252);
  width: 92%;
  height: 50px;
  border-radius: 15px;
}
.page .down-section .input-section .get-verification-code {
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page .down-section .input-section .get-verification-code-button {
  margin-right: 0;
  display: flex;
  width: 120px;
  height: 50px;
  font-size: 16px;
  align-items: center;
  justify-content: center;
  border-radius: 15px;
}
.page .down-section .input-section .button-disabled {
  background-color: rgb(220, 220, 220);
  color: #000;
  font-size: 18px;
  /* 按钮禁用时的背景颜色 */
}
.page .down-section .input-section .forget-pin {
  margin-top: 10px;
  color: royalblue;
}
.page .down-section .button-section {
  margin-top: 20px;
  margin-left: 6%;
  display: flex;
  flex-direction: column;
}
.page .down-section .button-section .sign-up {
  width: 92%;
}
.page .down-section .button-section .sign-up .bt-sign-up {
  height: 50px;
  border-radius: 25px;
  background-image: linear-gradient(to right, rgb(206, 223, 253), rgb(232, 238, 254));
  color: black;
  box-shadow: 0 4px 4px 2px rgb(210, 210, 210);
}
.page .down-section .otherway-sign-up {
  flex-grow: 1;
  margin-bottom: 40px;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
  position: relative;
}
.page .down-section .otherway-sign-up .split-line {
  color: rgb(90, 90, 90);
  margin-bottom: 15px;
  padding-top: 20px;
}
.page .down-section .otherway-sign-up .other-way {
  display: flex;
  flex-direction: row;
  gap: 35px;
}
.page .down-section .otherway-sign-up .other-way .other-way-img {
  border: 1px solid black;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 38px;
  width: 38px;
  border-radius: 21px;
  background-color: white;
}