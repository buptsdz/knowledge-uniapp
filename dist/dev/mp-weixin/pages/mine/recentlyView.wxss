.recentview-sec {
  margin-top: 10px;
}
.recentview-sec .recentview-sec-row {
  display: flex;
  justify-content: space-between;
  overflow-wrap: break-word;
  align-items: flex-start;
}
.recentview-sec .recentview-sec-row .item {
  width: 50%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-bottom: 6px;
  /* 根据需要调整样式 */
}
.recentview-sec .recentview-sec-row .item .item-image {
  margin-left: 3%;
  width: 94%;
  height: 0;
  position: relative;
  padding-bottom: 53%;
  /* 这个值可以调成自己想要的比值, 比如4:3的话就设置75% */
}
.recentview-sec .recentview-sec-row .item .item-image .img {
  width: 100%;
  height: 100%;
  -o-object-fit: cover;
     object-fit: cover;
  -o-object-position: center;
     object-position: center;
  position: absolute;
  border-radius: 15px;
}
