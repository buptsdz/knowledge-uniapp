page {
  width: 100%;
  background-color: #E5EDF8;
  z-index: -2;
}
.status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.top-img {
  position: fixed;
  width: 100%;
  height: -moz-fit-content;
  height: fit-content;
  z-index: 0;
}
.top-img .img {
  width: 100%;
  height: calc(270px + var(--status-bar-height));
}
.top-swiper-section {
  margin-top: 5px;
  margin-left: 2%;
  width: 96%;
}
.top-swiper-section .swiper {
  width: 100%;
  height: 160px;
}
.top-swiper-section .swiper .swiper-img {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16px;
}
.four-button {
  display: flex;
  flex-direction: row;
  margin-top: 18px;
  gap: 8vw;
  z-index: 10;
}
.four-button .four-button-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.four-button .four-button-item .four-button-item-img {
  height: 60px;
  width: 60px;
  margin-bottom: 5px;
}
.goto-notebook {
  margin-top: 15px;
  display: flex;
  align-items: center;
  height: 85px;
  margin-left: 4%;
  width: 92%;
}
.goto-notebook .goto-notebook-bg {
  position: absolute;
  width: 92%;
  height: 85px;
}
.goto-notebook .goto-notebook-button {
  margin-bottom: 13px;
  margin-right: 6%;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  justify-content: center;
  box-shadow: -1px 1px 2px 1px rgba(130, 130, 130, 0.5);
}
.detail-section {
  display: flex;
  flex-direction: column;
  margin-left: 4%;
  margin-top: 10px;
}
.detail-section-item {
  display: flex;
  flex-direction: column;
}
.detail-section-item .title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.detail-section-item .title .title-start {
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail-section-item .title .title-start .title-start-img {
  height: 23px;
  width: 23px;
  margin-right: 6px;
}
.detail-section-item .title .title-start .title-start-text {
  color: #2C2FAD;
  font-size: 19px;
}
.detail-section-item .title .title-end {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 4%;
}
.detail-section-item .title .title-end .title-end-img {
  height: 8px;
  width: 8px;
}
.detail-section-item .title .title-end .title-end-text {
  color: #2C2FAD;
  font-size: 13px;
  margin-right: 5px;
}
.detail-section-item .swiper-list {
  width: 100%;
  height: 105px;
}
.detail-section-item .swiper-list .swiper-list-item {
  margin-top: 8px;
  display: flex;
  flex-direction: column;
}
.detail-section-item .swiper-list .swiper-list-item .swiper-list-item-img {
  height: 65px;
  width: 92%;
  border-radius: 12px;
}
.detail-section-item .swiper-list .swiper-list-item .swiper-list-item-text {
  font-size: 12px;
  color: black;
}