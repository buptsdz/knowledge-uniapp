.top-tab {
  display: flex;
  z-index: 5;
  flex-direction: row;
  padding-top: 7px;
  margin-left: 4%;
  width: 92%;
  padding-bottom: 15px;
}
.top-tab .attendance {
  margin-right: 15px;
}
.top-tab .attendance .attendance-button {
  display: flex;
  align-items: center;
  color: white;
  height: 34px;
  border-radius: 8px;
  font-size: 12px;
  white-space: nowrap;
  background-image: linear-gradient(to right, rgb(80, 139, 248), rgb(65, 78, 207));
}
.top-tab .search {
  background-color: #E5EDF8;
  display: flex;
  flex-grow: 1;
  align-items: center;
  border-radius: 12px;
  z-index: 5;
}
.top-tab .search .search-img {
  margin-left: 10px;
  height: 20px;
  width: 20px;
}
.top-tab .search .search-input {
  margin-left: 10px;
  font-size: 12px;
}
.top-tab .log-in {
  margin-left: 15px;
  z-index: 5;
}
.top-tab .log-in .log-in-button {
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 34px;
  width: 34px;
  font-size: 12px;
  background-color: #E5EDF8;
}
.top-tab .log-in .log-in-avatar {
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 34px;
  width: 34px;
}